---
const {
	title = "Jeriel Beckford Price - Desarrollador Web Frontend",
	description = "Portfolio de Jeriel Beckford Price â€” desarrollador web frontend. Proyectos, habilidades y contacto.",
	url = "/",
	image = "/assets/img/profile.webp",
	lang = "es",
	canonicalBase = "https://porfolio-v2-eight-jet.vercel.app/"
} = Astro.props;

import "../styles/global.css";
//import "./../output/output.css"
import { Header, Footer } from "./../components/index.js"

const canonical = canonicalBase.replace(/\/$/, "") + url;
const ogImage = image.startsWith("http") ? image : canonicalBase.replace(/\/$/, "") + image;

const jsonLd = {
	"@context": "https://schema.org",
	"@type": "Person",
	"name": "Jeriel Beckford Price",
	"url": canonicalBase,
	"image": ogImage,
	"jobTitle": "Desarrollador Web Frontend",
	"mainEntityOfPage": {
		"@type": "WebPage",
		"@id": canonical
	}
};
---


<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="google-site-verification" content="WSeSQoKGD8qyzssJjq1GxbGN2kyWNQPP3mKnFp3U-DA" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<meta name="keywords" content="Jeriel Beckford Price, desarrollador web, frontend, HTML, CSS, JavaScript, portfolio, proyectos" />
		<meta name="author" content="Jeriel Beckford Price">
		<meta name="robots" content="index, follow">
		<meta name="language" content={lang}>
		<meta name="geo.region" content="CR">
		<meta name="geo.country" content="Costa Rica">
		<link rel="canonical" href={canonical} />
		<link rel="alternate" hreflang={lang} href={canonical} />

		<meta property="og:title" content={title}>
		<meta property="og:description" content={description}>
		<meta property="og:type" content="website">
		<meta property="og:url" content={canonical}>
		<meta property="og:image" content={ogImage}>
		<meta property="og:site_name" content="Jeriel Beckford Price Portfolio">
		<meta property="og:locale" content="es_ES">
		<meta property="og:image:alt" content="Foto de perfil de Jeriel Beckford Price, desarrollador web frontend">
		<meta property="og:image:type" content="image/webp">

		<meta name="twitter:card" content="summary_large_image">
		<meta name="twitter:title" content={title}>
		<meta name="twitter:description" content={description}>
		<meta name="twitter:image" content={ogImage}>
		<meta name="twitter:image:alt" content="Foto de perfil de Jeriel Beckford Price, desarrollador web frontend">
		<meta name="twitter:site" content="@jerielweb">
		<meta name="twitter:creator" content="@jerielweb">

		<title>{title}</title>

		<script type="application/ld+json">{JSON.stringify(jsonLd)}</script>
	</head>
	<body class="bg-linear-to-b from-violet-900 to-neutral-900 flex items-center justify-center bg-no-repeat flex-col font-sans scroll-smooth text-purple-50">
		<Header client:load/>
		<main class="flex flex-col w-full items-center gap-30 justify-center">
			<slot />
		</main>
		<Footer />
	</body>
</html>
